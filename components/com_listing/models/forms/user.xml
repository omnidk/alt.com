<?xml version="1.0" encoding="utf-8"?>
<form enctype="multipart/form-data">
   
	    <fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="user_id"
			type="hidden"
		/>
		
		<field
			name="total_balance"
			type="text"
			label="Total Balance"
			description="Plese Enter Total Balance"
			size="20"
			class="inputbox validate"
			default=""
		/>
		
		
		<field
			name="line_of_credit"
			type="text"
			label="Line of Credit"
			description="Plese Enter Line of Credit"
			size="20"
			class="inputbox validate"
			default=""			
		/>
		
		<field name="broker_id" type="sql" label="User name"  description="Please Select Coupon Category" query="SELECT id  AS value, name AS broker_id  FROM #__users "/>
		
		</fieldset>
</form>